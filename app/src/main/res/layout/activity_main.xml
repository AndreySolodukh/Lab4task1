<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/change_text_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Изменить"
        app:layout_constraintBottom_toTopOf="@id/unchangeable_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/unchangeable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Это поле не изменяется"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/change_text_button" />

</androidx.constraintlayout.widget.ConstraintLayout>